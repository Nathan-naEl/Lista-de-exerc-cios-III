#include <stdio.h>

int main() {
    int v[10], i;
    for(i=0;i<10;i++) {
        printf("v[%d]: ", i);
        scanf("%d", &v[i]);
    }
    int idxMax = 0, idxMin = 0;
    for(i=1;i<10;i++) {
        if (v[i] > v[idxMax]) idxMax = i;
        if (v[i] < v[idxMin]) idxMin = i;
    }
    printf("Indice do maior: %d\nIndice do menor: %d\n", idxMax, idxMin);
    return 0;
}
