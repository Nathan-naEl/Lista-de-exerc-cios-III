#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char s[200];
    printf("Digite uma palavra: ");
    scanf("%199s", s);
    int i = 0, j = strlen(s)-1;
    int pal = 1;
    while (i < j) {
        if (tolower((unsigned char)s[i]) != tolower((unsigned char)s[j])) { pal = 0; break; }
        i++; j--;
    }
    if (pal) printf("É um palínndromo\n");
    else printf("Não é um palindromo\n");
    return 0;
}
