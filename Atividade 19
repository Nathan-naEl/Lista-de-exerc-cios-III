#include <stdio.h>
#include <ctype.h>
#include <string.h>

int main() {
    char s[200];
    int i, cont = 0;
    printf("Digite uma palavra: ");
    scanf("%199s", s);
    for(i=0;i<strlen(s);i++) if (tolower((unsigned char)s[i]) == 'a') cont++;
    printf("Quantidade de letras 'a': %d\n", cont);
    return 0;
}
