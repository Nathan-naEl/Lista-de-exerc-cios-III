#include <stdio.h>

int main() {
    int v[8], i, j, tmp;
    for(i=0;i<8;i++) {
        printf("v[%d]: ", i);
        scanf("%d", &v[i]);
    }
    for(i=0;i<8;i++) for(j=i+1;j<8;j++) if (v[j] > v[i]) {
        tmp = v[i]; v[i] = v[j]; v[j] = tmp;
    }
    printf("Ordenado decrescente: ");
    for(i=0;i<8;i++) printf("%d ", v[i]);
    printf("\n");
    return 0;
}
