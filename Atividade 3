#include <stdio.h>
#include <stdlib.h>
#include <time.h>

int main() {
    int n, i, x;
    int somaP = 0, somaI = 0;
    printf("Quantidade de numeros: ");
    if (scanf("%d", &n) != 1) return 0;
    int *v = malloc(sizeof(int)*n);
    if (!v) return 0;
    printf("Digite 1 para preencher manualmente ou 2 para gerar aleatorio: ");
    int modo;
    if (scanf("%d", &modo) != 1) { free(v); return 0; }
    if (modo == 2) {
        srand((unsigned)time(NULL));
        for(i=0;i<n;i++) v[i] = rand() % 100;
    } else {
        for(i=0;i<n;i++) {
            printf("v[%d]: ", i);
            scanf("%d", &v[i]);
        }
    }
    printf("Array: ");
    for(i=0;i<n;i++) {
        printf("%d ", v[i]);
        if (v[i] % 2 == 0) somaP += v[i];
        else somaI += v[i];
    }
    printf("\nSoma pares: %d\nSoma impares: %d\n", somaP, somaI);
    free(v);
    return 0;
}
