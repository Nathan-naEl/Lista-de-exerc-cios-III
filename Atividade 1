#include <stdio.h>
#include <string.h>
#include <ctype.h>

int main() {
    char s[200];
    int i, vogais = 0, consoantes = 0;
    printf("Digite uma palavra: ");
    scanf("%199s", s);
    for(i = 0; s[i] != '\0'; i++) {
        char c = tolower((unsigned char)s[i]);
        if (isalpha((unsigned char)c)) {
            if (c=='a' || c=='e' || c=='i' || c=='o' || c=='u') vogais++;
            else consoantes++;
        }
    }
    printf("Vogais: %d\nConsoantes: %d\n", vogais, consoantes);
    return 0;
}
